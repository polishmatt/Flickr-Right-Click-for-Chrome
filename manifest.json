{
  "name": "Flickr Right Click",
  "version": "3.0.0",
  "description": "Lets you right click images on Flickr.",
  "manifest_version": 3,
  "icons": { 
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "action": {},
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "*://www.flickr.com/photos/*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
